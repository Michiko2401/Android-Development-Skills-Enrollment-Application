<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EnrollmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <!-- Title TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/enrolment_section_title"
            android:textSize="26sp"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Enrollment Plan Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:text="@string/enrollment_plan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="10dp" />

        <!-- Enrollment Plan RecyclerView -->
        <TextView
            android:id="@+id/no_enrollment_course_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_course_for_enrolment"
            android:textSize="16sp"
            android:visibility="gone"
            android:layout_gravity="center"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/enrolment_course_RecycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Course List Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:foregroundTint="#A0AFB4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course List"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="5dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/course_list_checkbox_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Error TextView -->
        <TextView
            android:id="@+id/enrolment_error_handle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:paddingBottom="8dp"
            android:textSize="12sp"
            android:textColor="@color/red"/>

        <!-- Selected Course Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Course Selection"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="5dp" />

            <TextView
                android:id="@+id/course_details_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select a course to see details"
                android:textSize="16sp"
                android:padding="16dp"/>
        </LinearLayout>

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/enrol_btn"
            android:backgroundTint="#003366"
            android:layout_marginTop="16dp"
            android:padding="16dp" />

    </LinearLayout>
</ScrollView>